<section class='tab syntheticgeneral scrollable {{tab.cssClass}}' style="height:611px" data-group='primary' data-tab='syntheticgeneral'>
	<div class="grid-synPage" style="width: 800px;">
		<!-- Col1 -->
		<div class='Item1' style='height: 147px;'>
			<div style='margin-bottom: 10px; width: 150px; margin-left: auto; margin-right: auto; margin-top: 5px;'>
				<h4 class='resource-label'>{{localize 'ALIENRPG.XP'}}</h4>
				<div class='newdots click-xp-stat-level' data-action='ClickXPStatLevel'>
					{{#times system.XPcurrent}}
						<i class='far fa-dot-circle'></i>
					{{/times}}
					{{#times system.XPlost}}
						<i class='far fa-circle'></i>
					{{/times}}
				</div>
			</div>
			<h4 class='resource-label'>{{localize 'ALIENRPG.StoryPoints'}}</h4>
			<div class='newdots click-sp-stat-level' data-action='ClickSPStatLevel'>
				{{#times system.SPcurrent}}
					<i class='far fa-dot-circle'></i>
				{{/times}}
				{{#times system.SPlost}}
					<i class='far fa-circle'></i>
				{{/times}}
			</div>
			{{! <br /> }}
			<div style='margin-top: 6px'>
				<label class='resource-label'>{{localize 'ALIENRPG.Cash'}}</label>
				<input type='text' class='cashboxsize currency' name='system.general.cash.value' value='{{system.general.cash.value}}' />
			</div>
		</div>
		<div class="Item8" style="height:275px">
			<h2 class="resource-label">{{ localize 'ALIENRPG.Conditions'}}</h2>
			{{#if system.header.synthstress}}
				<div style="margin-bottom: 10px">
					<div class="starving">
						<h3 class="condition resource-label" data-action='OverwatchToggle' data-key="starving" title="{{ localize 'ALIENRPG.ConButtons'}}">
							<a class="overwatch-toggle">
								{{#if (eq system.general.starving true)}}
									<i class="far fa-dot-circle"></i>
								{{else}}
									<i class="far fa-circle"></i>
								{{/if}}
							</a>
							{{localize 'ALIENRPG.Starving'}}
						</h3>
					</div>
					<div class="dehydrated">
						<h3 class="condition resource-label" data-action='OverwatchToggle' data-key="dehydrated" title="{{ localize 'ALIENRPG.ConButtons'}}">
							<a class="overwatch-toggle">
								{{#if (eq system.general.dehydrated true)}}
									<i class="far fa-dot-circle"></i>
								{{else}}
									<i class="far fa-circle"></i>
								{{/if}}
							</a>
							{{ localize 'ALIENRPG.Dehydrated'}}
						</h3>
					</div>

					<div class="exhausted">
						<h3 class="condition resource-label" data-action='OverwatchToggle' data-key="exhausted" title="{{ localize 'ALIENRPG.ConButtons'}}">
							<a class="overwatch-toggle">
								{{#if (eq system.general.exhausted true)}}
									<i class="far fa-dot-circle"></i>
								{{else}}
									<i class="far fa-circle"></i>
								{{/if}}
							</a>
							{{ localize 'ALIENRPG.Exhausted'}}
						</h3>
					</div>

					<div class="freezing">
						<h3 class="condition resource-label" data-action='OverwatchToggle' data-key="freezing" title="{{ localize 'ALIENRPG.ConButtons'}}">
							<a class="overwatch-toggle">
								{{#if (eq system.general.freezing true)}}
									<i class="far fa-dot-circle"></i>
								{{else}}
									<i class="far fa-circle"></i>
								{{/if}}
							</a>
							{{ localize 'ALIENRPG.Freezing'}}
						</h3>
					</div>
					<div class="hypoxia">
						<h3 class="condition resource-label" data-action='OverwatchToggle' data-key="hypoxia" title="{{ localize 'ALIENRPG.ConButtons'}}">
							<a class="overwatch-toggle">
								{{#if (eq system.general.hypoxia true)}}
									<i class="far fa-dot-circle"></i>
								{{else}}
									<i class="far fa-circle"></i>
								{{/if}}
							</a>
							{{ localize 'ALIENRPG.hypoxia'}}
						</h3>
					</div>
					<div class="heatstroke">
						<h3 class="condition resource-label" data-action='OverwatchToggle' data-key="heatstroke" title="{{ localize 'ALIENRPG.ConButtons'}}">
							<a class="overwatch-toggle">
								{{#if (eq system.general.heatstroke true)}}
									<i class="far fa-dot-circle"></i>
								{{else}}
									<i class="far fa-circle"></i>
								{{/if}}
							</a>
							{{ localize 'ALIENRPG.heatstroke'}}
						</h3>
					</div>
					<div class="gravitydyspraxia">
						<h3 class="condition resource-label" data-action='OverwatchToggle' data-key="gravitydyspraxia" title="{{ localize 'ALIENRPG.ConButtons'}}">
							<a class="overwatch-toggle">
								{{#if (eq system.general.gravitydyspraxia true)}}
									<i class="far fa-dot-circle"></i>
								{{else}}
									<i class="far fa-circle"></i>
								{{/if}}
							</a>
							{{ localize 'ALIENRPG.gravitydyspraxia'}}
						</h3>
					</div>
				</div>
			{{else}}
				<div style="margin-bottom: 6px">{{localize 'ALIENRPG.SynthDontNeed'}}</div>
			{{/if}}
			<div class="overwatch">
				<h3 class="condition" data-action='OverwatchToggle' data-key='overwatch'>
					<a class="overwatch-toggle">
						{{#if system.general.overwatch}}
							<i class="far fa-check-square"></i>
						{{else}}
							<i class="far fa-square"></i>
						{{/if}}
					</a>
					{{localize 'ALIENRPG.Overwatch'}}
				</h3>
			</div>
			<div>
				<h3 style="text-align: center; font-weight: bold" class="resource-label">{{ localize 'ALIENRPG.Radiation'}}</h3>
				<div class="newdots click-stat-level-con" data-action='RadPointClick' data-label="{{ localize 'ALIENRPG.Radiation'}}" data-roll="{{system.general.radiation.value}}">
					{{#times system.RADcurrent}}
						<i class="far fa-dot-circle"></i>
					{{/times}} {{#times system.RADlost}}
						<i class="far fa-circle"></i>
					{{/times}} {{#times system.RADfill}}
						<i class="far fa-dot-circle" style="color: red"></i>
					{{/times}}
				</div>
			</div>
		</div>

		<div class='Item9' style='height: 151px;'>
			<div class='grid-Consumables'>
				<h2 class='Heading' style='margin-bottom: 0; border-bottom: 0'>{{localize 'ALIENRPG.Consumables'}}</h2>
				<h3 class='Air1 resource-label'>{{localize 'ALIENRPG.Air'}}</h3>
				<input type='text' class='Air2 maxboxsize' name='system.consumables.air.value' value='{{system.consumables.air.value}}' data-dtype='Number' disabled />
				<button type='button' class='supply-btn Air3' data-action='SupplyBtn' data-spbutt='Air'>
					<i class='fas fa-parachute-box' title='{{localize "ALIENRPG.Supply"}}'></i>
				</button>
				<h3 class='Food1 resource-label'>{{localize 'ALIENRPG.Food'}}</h3>
				<input type='text' class='Food2 maxboxsize' name='system.consumables.food.value' value='{{system.consumables.food.value}}' data-dtype='Number' disabled />
				<button type='button' class='supply-btn Food3' data-action='SupplyBtn' data-spbutt='Food'>
					<i class='fas fa-parachute-box' title='{{localize "ALIENRPG.Supply"}}'></i>
				</button>

				<h3 class='Water1 resource-label'>{{localize 'ALIENRPG.Water'}}</h3>
				<input type='text' class='Water2 maxboxsize' name='system.consumables.water.value' value='{{system.consumables.water.value}}' data-dtype='Number' disabled />
				<button type='button' class='supply-btn Water3' data-action='SupplyBtn' data-spbutt='Water'>
					<i class='fas fa-parachute-box' title='{{localize "ALIENRPG.Supply"}}'></i>
				</button>

				<h3 class='Power1 resource-label'>{{localize 'ALIENRPG.Power'}}</h3>
				<input type='text' class='Power2 maxboxsize' name='system.consumables.power.value' value='{{system.consumables.power.value}}' data-dtype='Number' disabled />
				<button type='button' class='supply-btn Power3' data-action='SupplyBtn' data-spbutt='Power' disabled>
					<i class='fa fa-chevron-up' title='{{localize "ALIENRPG.InventoryTab"}}'></i>
				</button>
			</div>
		</div>
		<div class="Item10">
			<span class="grid-2col-border">
				<label class='resource-label rollable' style="font-size: larger;" data-action='RollAbility' data-roll='{{system.general.armor.value}}' data-spbutt='armor' data-label='{{localize "ALIENRPG.Armor"}}'>{{localize 'ALIENRPG.Armor'}}
				</label>
				<input type="text" class="maxboxsize" name="system.general.armor.value" value="{{system.general.armor.value}}" data-dtype="Number" disabled />
			</span>
		</div>

		<!-- Col 2 -->
		<div class='Item2' style='height: 85px;'>
			<div class='grid-two' style='margin-top: 10px; '>
				<label class='resource-label' style='font-weight: bold'>{{localize 'ALIENRPG.Career'}}</label>
				<select class='select-css' id='system.general.career.value' name='system.general.career.value'>
					{{selectOptions career_list selected=system.general.career.value labelAttr='label' localize=true}}
				</select>
				<div class='box3 resource-label'>
					<label class='speciality-label' style='font-weight: bold'>{{localize 'ALIENRPG.SPECIALTY'}}</label>
					<div class='item-controls'></div>
				</div>
				<div class='box4'>
					{{#each specialities as |item iid|}}
						<li class='item grid-special' data-item-id='{{item._id}}'>
							<h4 class='item-name spe2' data-pmbut='{{item._id}}'>{{item.name}}</h4>
							<a class='spe3 item-control item-edit1' data-action='viewDoc' data-document-class='Item' data-item-id='{{item._id}}' title='{{localize "ALIENRPG.EditItem"}}'><i class='fas fa-edit'></i></a>
						</li>
					{{/each}}
				</div>
			</div>
			<br />
		</div>

		<div class="Item4">
			<label class='resource-label' style='font-weight: bold'>{{localize 'ALIENRPG.Appearance'}}</label>
			<textarea name='system.general.appearance.value' rows='4' data-dtype='String'>{{system.general.appearance.value}}</textarea>
		</div>

		<div class="Item5">
			<label class="resource-label" style="font-weight: bold">{{ localize 'ALIENRPG.PersonalAgenda'}}</label>
			<textarea name="system.general.agenda.value" rows="3" data-dtype="String">{{system.general.agenda.value}}</textarea>
		</div>

		<div class="Item6" style="height:160px; margin-top: -121px;">
			<label class="resource-label" style="font-weight: bold">{{ localize 'ALIENRPG.Relationships'}}</label>
			<br />
			<label class="resource-label" style="font-size: smaller">{{ localize 'ALIENRPG.relOne'}}</label>
			<input type="text" class="textbox" style="width: -webkit-fill-available;" name="system.general.relOne.value" value="{{system.general.relOne.value}}" rows="1" data-dtype="String" />

			<label class="resource-label" style="font-size: smaller">{{ localize 'ALIENRPG.relTwo'}}</label>
			<input type="text" class="textbox" style="width: -webkit-fill-available;" name="system.general.relTwo.value" value="{{system.general.relTwo.value}}" rows="1" data-dtype="String" />
		</div>
		<div class="Item7" style="margin-top: -112px;">
			<div class="grid-crit">
				<label class="speciality-label crit1" style="font-weight: bold">{{ localize 'ALIENRPG.CriticalInjuries'}}</label>
				<button type="button" class="alien-crit-button rollCrit crit2" data-action='RollCrit'>{{localize 'ALIENRPG.RollCrit'}}</button>
			</div>

			<div class='crit-box' style='height: 90px;'>
				<ol class='items-list'>
					{{#each critInj as |item iid|}}
						<li class='item critical-inj' data-item-id='{{item.id}}'>
							<a class='item-image crit1a'><img src='{{item.img}}' width='24' height='24' /></a>
							<a class='item-name crit2a'>{{item.name}}</a>
							<a class='item-name crit3a' style='font-size:smaller '>{{{striptags item.system.attributes.effects}}}</a>
							<a class='crit4a item-control item-edit1' data-action='viewDoc' data-document-class='Item' data-item-id='{{item.id}}' title='{{localize "ALIENRPG.EditItem"}}'><i class='fas fa-edit'></i></a>
						</li>
					{{/each}}
				</ol>
			</div>
		</div>
	</div>
</section>