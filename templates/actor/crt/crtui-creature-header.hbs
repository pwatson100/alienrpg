<header class='vehicle-header crt' style='height: 179px'>
	<img class='profile-img' src='{{actor.img}}' data-edit='img' data-action='onEditImage' data-tooltip='{{actor.name}}' height='100' width='100' />
	<div class='header-fields'>
		<h1 class='charname'><input name='name' type='text' value='{{actor.name}}' placeholder='{{localize "ALIENRPG.Name"}}' /></h1>

		{{! Health and Stress }}

		<div class='grid-creature' style='height: 120px'>
			<div class='vCre1 grid-2'>
				<h3 class='resource-label box11'>{{localize 'ALIENRPG.Health'}}</h3>
				<input type='text' class='maxboxsize box21' name='system.header.health.value' value='{{system.header.health.value}}' data-dtype='Number' />
				<label class='box23'> / </label>
				<input type='text' class='maxboxsize box22' name='system.header.health.max' value='{{system.header.health.max}}' data-dtype='Number' />
			</div>
			<div class='vCre2 grid-2'>
				<h3
					class='resource-label box11 rollable'
					data-action='RollAbility'
					data-roll='{{system.attributes.armorrating.value}}'
					data-label='{{localize "ALIENRPG.InventoryArmorHeader"}}'
					data-spbutt='armor'
				>
					{{localize 'ALIENRPG.InventoryArmorHeader'}}
				</h3>
				<input type='text' class='maxboxsize box21' name='system.attributes.armorrating.value' value='{{system.attributes.armorrating.value}}' data-dtype='Number' />
			</div>
			<div class='vCre3 grid-2'>
				<h3 class='resource-label box11'>{{localize 'ALIENRPG.Speed'}}</h3>
				<input type='text' class='maxboxsize box21' name='system.attributes.speed.value' value='{{system.attributes.speed.value}}' data-dtype='Number' />
			</div>
			<div class='vCre4 grid-2'>
				<h3
					class='resource-label box11 rollable'
					data-action='RollAbility'
					data-roll='{{system.attributes.armorvfire.value}}'
					data-label='{{localize "ALIENRPG.ArmorVsFire"}}'
					data-spbutt='armorVfire'
				>
					{{localize 'ALIENRPG.ArmorVsFire'}}
				</h3>
				<input type='text' class='maxboxsize box21' name='system.attributes.armorvfire.value' value='{{system.attributes.armorvfire.value}}' data-dtype='Number' />
			</div>
			<div class='vCre5 grid-2'>
				<h3 class='resource-label box11 rollable' data-action='RollAbility' data-roll='{{system.general.mobility.value}}' data-label='{{localize "ALIENRPG.Skillmobility"}}'>
					{{localize 'ALIENRPG.Skillmobility'}}
				</h3>
				<input type='text' class='maxboxsize box21' name='system.general.mobility.value' value='{{system.general.mobility.value}}' data-dtype='String' />
			</div>
			<div class='vCre6 grid-2'>
				<h3
					class='resource-label box11 rollable'
					data-action='RollAbility'
					data-roll='{{system.general.observation.value}}'
					data-label='{{localize "ALIENRPG.Skillobservation"}}'
				>
					{{localize 'ALIENRPG.Skillobservation'}}
				</h3>
				<input type='text' class='maxboxsize box21' name='system.general.observation.value' value='{{system.general.observation.value}}' data-dtype='String' />
			</div>
			<div class='vCre8 grid-2'>
				<h3
					class='resource-label box11 creature-acid-roll'
					data-action='creatureAcidRoll'
					data-roll='{{system.general.acidSplash.value}}'
					data-label='{{localize "ALIENRPG.SkillAcidSplash"}}'
				>
					{{localize 'ALIENRPG.SkillAcidSplash'}}
				</h3>
				<input type='text' class='maxboxsize box21' name='system.general.acidSplash.value' value='{{system.general.acidSplash.value}}' data-dtype='String' />
			</div>
		</div>
	</div>
</header>