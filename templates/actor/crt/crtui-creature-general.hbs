<section class='tab crtuicreaturegeneral scrollable crt {{tab.cssClass}}' data-group='primary' data-tab='crtuicreaturegeneral'>
	<label class='resource-label'>{{localize 'ALIENRPG.AttackTable'}}</label>
	<div class='grid-rTables'>
		<select class='select-css rTable1' name='system.rTables' data-atttype='{{system.rTables}}'>
			{{selectOptions rTables selected=system.rTables valueAttr='key' labelAttr='label'}}
		</select>

		<button type='button' class='creature-attack-roll rTable2' data-action='creatureAttackRoll' data-atttype='{{system.rTables}}'>{{localize 'ALIENRPG.AttackRoll'}}</button>
	</div>
	<h3 class='resource-label'>{{localize 'ALIENRPG.SpecialAbilities'}}</h3>
	<textarea name='system.general.special.value' rows='20' data-dtype='String'>{{system.general.special.value}}</textarea>

	<label class='resource-label'>{{localize 'ALIENRPG.CriticalInjuries'}}</label>
	<div class='grid-rTables' style='margin: 5px 0px 8px 0px'>
		<select class='select-css rTable1' name='system.cTables' data-atttype='{{system.cTables}}'>
			{{selectOptions cTables selected=system.cTables valueAttr='key' labelAttr='label'}}
		</select>
		<button type='button' class='alien-crit-button rTable2 rollCrit' data-action='RollCrit' data-atttype='{{system.cTables}}'>{{localize 'ALIENRPG.RollCrit'}}</button>
	</div>
	<div class='crit-box' style='min-height: 87px; height:auto'>
		<ol class='items-list'>
			{{#each critInj as |item iid|}}
				<li class='item critical-inj-wide' data-item-id='{{item.id}}'>
					<a class='item-image crit1w'><img src='{{item.img}}' width='24' height='24' /></a>
					<a class='item-name crit2w'>{{item.name}}</a>
					<a class='item-name crit3w' style='font-size:smaller '>{{{striptags item.system.attributes.effects}}}</a>
					<a class='crit4w item-control item-edit1' data-action='viewDoc' data-document-class='Item' data-item-id='{{item.id}}' title='{{localize "ALIENRPG.EditItem"}}'><i
							class='fas fa-edit'
						></i></a>
				</li>
			{{/each}}
		</ol>
	</div>
</section>