<section class='tab spacecraftmods scrollable {{tab.cssClass}}' data-group='primary' data-tab='spacecraftmods'>

	<div class='grid-Char-Att'>
		<h3 class='resource-label gCol1'>{{localize 'ALIENRPG.QuantityLabel'}}</h3>
		<input type='text' name='system.attributes.quantity.value' class='maxboxsize gCol2' value='{{system.attributes.quantity.value}}' data-dtype='Number' />
	</div>
	<h2 class='resource-label'>{{localize 'ALIENRPG.Comment'}}</h2>
	<div style='border: solid 1px; padding: 5px;width: 629px;'>
		{{! Editors must receive enriched text data from getData to properly handle rolls, UUID links, etc. }}
		{{#if editable}}
			<prose-mirror
				style='height: 200px;'
				name='system.attributes.comment.value'
				data-document-uuid='{{item.uuid}}'
				value='{{system.attributes.comment.value}}'
				collaborate='true'
				toggled='true'
			>
				{{{enrichedComment}}}
			</prose-mirror>
		{{else}}
			{{{enrichedComment}}}
		{{/if}}
	</div>
</section>