{{! Notes Tab }}
<section class='tab planet-description scrollable {{tab.cssClass}}' data-group='primary' data-tab='planet-description'>
	<div style='border: solid 1px; padding: 5px;width: 629px;'>

		{{! Editors must receive enriched text data from getData to properly handle rolls, UUID links, etc. }}
		{{#if editable}}
			<prose-mirror
				style='height: 268px; '
				name='system.misc.description.value'
				data-document-uuid='{{item.uuid}}'
				value='{{system.misc.description.value}}'
				collaborate='true'
				toggled='true'
			>
				{{{enrichedDescription}}}
			</prose-mirror>
		{{else}}
			{{{enrichedDescription}}}
		{{/if}}
	</div>
</section>