<section class='tab colony-initiative scrollable {{tab.cssClass}}' data-group='primary' data-tab='colony-initiative'>
	<div>
		<h2 class='resource-label' style='margin-top: 5px'>{{localize 'ALIENRPG.Comment'}}</h2>
		<div style='border: solid 1px; padding: 5px; height: 210px; margin-bottom: 10px'>
			{{! Editors must receive enriched text data from getData to properly handle rolls, UUID links, etc. }}
			{{#if editable}}
				<prose-mirror
					{{! style='height: 210px;' }}
					name='system.header.comment'
					data-document-uuid='{{item.uuid}}'
					value='{{system.header.comment}}'
					collaborate='true'
					toggled='true'
				>
					{{{enrichedComment}}}
				</prose-mirror>
			{{else}}
				{{{enrichedComment}}}
			{{/if}}
		</div>
		<h2 class='resource-label'>{{localize 'ALIENRPG.Modifiers'}}</h2>
		<div class='grid-2col'>
			<div class='modifiers flexrow flex-group-center'>
				<label for='system.modifiers.economy.value' class='resource-label'>{{localize 'ALIENRPG.economy'}}</label>
				<input type='text' class='maxboxsize' name='system.modifiers.economy.value' value='{{system.modifiers.economy.value}}' data-dtype='Number' />
			</div>
			<div class='modifiers flexrow flex-group-center'>
				<label for='system.modifiers.potential.value' class='resource-label'>{{localize 'ALIENRPG.potential'}}</label>
				<input type='text' class='maxboxsize' name='system.modifiers.potential.value' value='{{system.modifiers.potential.value}}' data-dtype='Number' />
			</div>
			<div class='modifiers flexrow flex-group-center'>
				<label for='system.modifiers.productivity.value' class='resource-label'>{{localize 'ALIENRPG.productivity'}}</label>
				<input type='text' class='maxboxsize' name='system.modifiers.productivity.value' value='{{system.modifiers.productivity.value}}' data-dtype='Number' />
			</div>
			<div class='modifiers flexrow flex-group-center'>
				<label for='system.modifiers.maintenance.value' class='resource-label'>{{localize 'ALIENRPG.maintenance'}}</label>
				<input type='text' class='maxboxsize' name='system.modifiers.maintenance.value' value='{{system.modifiers.maintenance.value}}' data-dtype='Number' />
			</div>
			<div class='modifiers flexrow flex-group-center'>
				<label for='system.modifiers.science.value' class='resource-label'>{{localize 'ALIENRPG.science'}}</label>
				<input type='text' class='maxboxsize' name='system.modifiers.science.value' value='{{system.modifiers.science.value}}' data-dtype='Number' />
			</div>
			<div class='modifiers flexrow flex-group-center'>
				<label for='system.modifiers.spirit.value' class='resource-label'>{{localize 'ALIENRPG.spirit'}}</label>
				<input type='text' class='maxboxsize' name='system.modifiers.spirit.value' value='{{system.modifiers.spirit.value}}' data-dtype='Number' />
			</div>
		</div>
	</div>
</section>